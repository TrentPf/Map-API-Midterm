<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- EXTERNAL CSS -->

   <!-- Bootstrap -->
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- <link rel="stylesheet" href="../public/styles/layout.css" type="text/css" /> -->
  <link rel="stylesheet" href="../public/styles/nav.css" type="text/css"/>
  <link rel="stylesheet" href="../public/styles/main.css" type="text/css" />
  <script src="https://kit.fontawesome.com/05d72d0c0c.js" crossorigin="anonymous"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

  <script src="../public/scripts/addToFavourites.js"></script>
  <style>
    .btn {
      color: black;
    }

    #append {
      padding: 5px 15px;
    }
  </style>

  <title>MapHub</title>
</head>


<body>
  <nav id="navbar">
    <span><a class="nav-buttons" id="home" href="http://localhost:8080/">mapHub</a></span>
    <span><a class="nav-buttons" href="http://localhost:8080/id/users">My Maps</a></span>
    <span><a class="nav-buttons" href="http://localhost:8080/id/create">Create Map</a></span>
    <span><a class="nav-buttons" href="http://localhost:8080/Login">Register</a></span>
  </nav>


<div class="content">

  <div id="title">
    <h1 class="Popular maps">Popular Maps</h1>
  </div>

  <% for (let map of maps) { %>
    <div class="map-section">
      <div id="map_area">
        <div id="map">
          <section id="maps">
            <div class="map_info">
              <header class="map title">
                <div class="title-and-pic">
                  <div id="header">
                    <a href="http://localhost:8080/selected_map/<%= map.id %>" class="map_name" id="title">
                      <h1>
                        <%= map.mapname %>
                      </h1>
                    </a>
                    <div class="favourites_button">
                      <button id='<%=map.id%>'><i class="fas fa-heart"></i></button>
                    </div>
                  </div>

                  <div id="map_image">
                    <img class="picture" src="<%= map.image_url %>"> </img>
                  </div>

                </div>
                <h3 class="username">Created By: <%= map.username%>
                </h3>
              </header>
              <h5 class="description">
                <%= map.description %>
              </h5>

            </div>

          </div>
        </div>
      </div>
      <% } %>
    </div>
  </secion>
</div>
</div>

  <!-- Bootstrap js -->
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>

</html>
